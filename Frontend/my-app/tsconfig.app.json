{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src", // Đặt thư mục gốc cho các module imports là 'src'
    "paths": {
      "@api/*": ["api/*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@types": ["types/index"], // Định nghĩa alias cho thư mục types
      "@types/*": ["types/*"], // Hoặc nếu bạn có nhiều file trong types
      "@utils/*": ["utils/*"] // Ví dụ cho các thư mục khác
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}